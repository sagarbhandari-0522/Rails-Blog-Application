<h1 class="text-center mt-5"> <%= a %> </h1>
<div class="container">
	<div class="row">
		<div class="col-md-2"></div>
		<div class="col-md-10">
			<%= render 'shared/errors',obj:@article,a:'article' %>
			<%= form_with model: @article, class: "my-3" do |f|%>
				<div class="form-group">
					<%= f.label :title, class: "col-sm-4 col-form-label "%>
					<div class="col-sm-8">
						<%= f.text_field :title, class:"form-control", placeholder: "Title of an article"%>
					</div>
				</div>
				<div class="form-group mb-3">
					<%= f.label :description, class:  "col-sm-4 col-form-label"%>
					<div class="col-sm-8">
						<%= f.text_area :description, size: "70x5", class:"form-control", placeholder: "Description of an aricle"%>
					</div>
				</div>
				<% if false%>
					<div class="form-group">
						<%=  f.collection_check_boxes :category_ids,Category.all, :id, :name, class:'form-check-input form-check-label '%>
					</div>
				<% end %>
				<%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
					<%= b.check_box %>
					<%= b.label class: ' text-center text-uppercase p-1' %>
				<% end %>
				<div class="form-group">
					<div class="col-sm-10">
						<%= f.submit data: {turbo:false}, class:"btn btn-primary" %>
					</div>
				</div>
			<% end%>
		</div>
	</div>
	<div class="small text-center ">
		[ <%= link_to 'Cancel request and Back to articles listing', articles_path, class:"text-decoration-none" %> ]
	</div>
</div>
