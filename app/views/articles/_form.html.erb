<% if @article.errors.any?%>
	<% @article.errors.full_messages.each do|message|%>
		<%= message%><br>
	<% end%>
<% end %>
<div class="container text-center col-md-8 my-5">
	<h1> <%= a %> </h1>
	<%= form_with model: @article, class: "mt-3" do |f|%>
		<div class="form-group row">
			<%= f.label :title, class: "col-sm-4 col-form-label "%>
			<div class="col-sm-8">
				<%= f.text_field :title, class:"form-control", placeholder: "Title of an article"%>
			</div>
		</div>
		<br>
		<div class="form-group row mb-3">
			<%= f.label :description, class:  "col-sm-4 col-form-label"%>
			<div class="col-sm-8">
				<%= f.text_area :description, size: "70x5", class:"form-control", placeholder: "Description of an aricle"%>
			</div>
		</div>
		<div class="form-group row">
			<div class="col-sm-10">
				<%= f.submit data: {turbo:false}, class:"btn btn-primary" %>
			</div>
		</div>
	<% end%>
	<div class="my-5 small ">
		[ <%= link_to 'Cancel request and Back to articles listing', articles_path, class:"text-decoration-none" %> ]
	</div>
</div>
