<div class="container-fluid">
	<h1 class="text-center mt-5"> All Alpha Bloggers</h1>
	<% @users.each do|user|%>
		<div class="card mb-3 mx-auto" style="max-width: 600px;">
			<div class="row no-gutters">
				<div class="col-md-3 mt-3 text-center">
					<%= link_to user_gravatar(user,size:120), user_path(user) %>
				</div>
				<div class="col-md-8">
					<div class="card-body">
						<h5 class="card-title">
							<%= link_to user.username, user_path(user), class:"text-decoration-none" %>
						</h5>
						<p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
						<p class="card-text font-weight-bold"><small><%=pluralize(user.articles.count,'Article') if user.articles%></small></p>
					</div>
				</div>
			</div>
		</div>
	<%end%>
	<div class="float-start mb-2"><%== pagy_bootstrap_nav(@pagy) %></div>
</div>
