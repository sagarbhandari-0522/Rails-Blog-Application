<h1 class="text-center mt-5"> <%= a %> </h1>
<div class="container">
	<div class="row">
		<div class="col-md-2"></div>
		<div class="col-md-10">
			<%= render 'shared/errors',obj:@user,a:'user' %>
			<%= form_with model: @user, class: "my-3" do |f|%>
				<div class="form-group">
					<%= f.label :username, class: "col-sm-4 col-form-label "%>
					<div class="col-sm-8">
						<%= f.text_field :username, class:"form-control", placeholder: "Username"%>
					</div>
				</div>
				<div class="form-group mb-3">
					<%= f.label :email, class:  "col-sm-4 col-form-label"%>
					<div class="col-sm-8">
						<%= f.text_field :email, size: "70x5", class:"form-control", placeholder: "Email"%>
					</div>
				</div>
				<div class="form-group mb-3">
					<%= f.label :password, class:  "col-sm-4 col-form-label"%>
					<div class="col-sm-8">
						<%= f.password_field :password, size: "70x5", class:"form-control", placeholder: "Password"%>
					</div>
				</div>
				<div class="form-group mb-3">
					<%= f.label :password_confirmation, 'Confirm Password',class:  "col-sm-4 col-form-label"%>
					<div class="col-sm-8">
						<%= f.password_field :password_confirmation, size: "70x5", class:"form-control", placeholder: "Confirm Password"%>
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-10">
						<%= f.submit b, data: {turbo:false}, class:"btn btn-primary" %>
					</div>
				</div>
			<% end%>
		</div>
	</div>
</div>
